<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardBackgroundColor="?attr/listItemCardBackgroundColor"
        app:cardCornerRadius="5dp"
        android:layout_marginVertical="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/password_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="BacBBaac7"
                    android:textIsSelectable="true">

                </TextView>

                <ImageButton
                    android:id="@+id/password_item_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_copy"
                    android:background="@null"
                    android:layout_margin="3dp"
                    app:tint="?android:attr/colorPrimary">

                </ImageButton>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/password_item_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="listName">

            </TextView>

            <TextView
                android:id="@+id/password_item_symbols"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="aBc7">

            </TextView>

            <TextView
                android:id="@+id/password_item_entropy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="123.0">

            </TextView>

            <TextView
                android:id="@+id/password_item_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Poor">

            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</layout>